{
  "root": "libs/toolbelt",
  "sourceRoot": "libs/toolbelt/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/toolbelt/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/toolbelt"],
      "options": {
        "jestConfig": "libs/toolbelt/jest.config.js",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/toolbelt",
        "tsConfig": "libs/toolbelt/tsconfig.lib.json",
        "packageJson": "libs/toolbelt/package.json",
        "main": "libs/toolbelt/src/index.ts",
        "assets": ["libs/toolbelt/*.md"]
      }
    }
  },
  "tags": []
}
